{
  "name": "origami-projector",
  "productName": "Origami Projector",
  "version": "0.6.9",
  "description": "Origami project editor",
  "author": "weborigami.org",
  "license": "MIT",
  "type": "module",
  "main": "src/app/main.js",
  "devDependencies": {
    "@types/node": "25.0.9",
    "electron": "39.2.7",
    "electron-builder": "26.4.0",
    "puppeteer": "24.30.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@emnapi/runtime": "1.8.1",
    "@weborigami/origami": "0.6.10",
    "monaco-editor": "^0.52.0",
    "sharp": "0.34.5"
  },
  "optionalDependencies": {
    "@img/sharp-wasm32": "0.34.5"
  },
  "scripts": {
    "build": "electron-builder --mac",
    "copy-monaco": "mkdir -p src/renderer/monaco && cp -R node_modules/monaco-editor/min* src/renderer/monaco",
    "gen-globals": "ori Tree.json Tree.keys package:@weborigami/language/jsGlobals > src/renderer/tokenizer/globals.json",
    "headless-test": "node scripts/headlessTest.js",
    "postinstall": "electron-builder install-app-deps && npm run copy-monaco",
    "start": "electron .",
    "test": "node --test --test-reporter=spec --conditions=test",
    "typecheck": "tsc"
  },
  "imports": {
    "#electron": {
      "test": "./test/mocks/electron.js",
      "default": "./src/platform/electron.js"
    }
  },
  "build": {
    "appId": "org.weborigami.projector",
    "productName": "Origami Projector",
    "mac": {
      "category": "public.app-category.developer-tools",
      "identity": "Jan Miksovsky (P4XND4W8NJ)",
      "fileAssociations": [
        {
          "ext": "ori",
          "name": "Origami Program File",
          "role": "Editor"
        }
      ],
      "target": "dmg"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/@img/sharp-wasm32/**/*"
    ]
  }
}
